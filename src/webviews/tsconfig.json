{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["dom", "ES2019"],
    "types": ["vscode-webview"],
    "sourceMap": true,
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "**/*.tsx", "index.d.ts"]
}
